{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/**/*.ts": {
      "maxDuration": 300
    },
    "src/app/api/upload/from-s3/route.ts": {
      "maxDuration": 180,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/cron/submit-ocr",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/archive-ocr",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/batch-processor",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/social-post",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/social-reset",
      "schedule": "0 0 * * *"
    }
  ]
}
